<h1> Todos </h1>
<ul>
  {{#each todos}}
    <li>Description: {{description}}</li>
    <li>Urgent: {{urgent}}</li>
    <br>



    <!-- button would work, BUT need to be in a form -->
    <!-- <button type = "subtmit" action="/todos/{{@index}}"> show todos </button> -->

    <form action="/todos/{{@index}}" method="GET">
      <input type="button" value="Show Todo">
    </form>

    <form action="/todos/{{@index}}?_method=DELETE" method="POST">
      <input type="submit" value="Delete Todo">
    </form>

    <div>
      <a href="/todos/{{@index}}/edit"> Edit </a>
    </div>
    <div>
      <a href="/todos/new"> New </a>
    </div>
    <hr>

  {{/each}}
</ul>
